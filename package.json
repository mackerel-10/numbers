{
  "name": "testdrivenflow",
  "version": "1.0.0",
  "description": "",
  "exports": "./src/server.ts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "jest",
    "test:unit": "npm test --config test/unit",
    "test:integration": "npm test --config test/integration",
    "test:node:up": "docker compose -f docker-compose.test.yaml up -d",
    "test:node:down": "docker compose -f docker-compose.test.yaml down --rmi all",
    "test:mysql:up": "docker compose -f docker-compose.test.yaml up -d mysql",
    "test:mysql:down": "docker compose -f docker-compose.test.yaml down --rmi all mysql",
    "test:swagger:up": "docker compose -f docker-compose.test.yaml up -d swagger",
    "test:swagger:down": "docker compose -f docker-compose.test.yaml down --rmi all swagger",
    "lint": "eslint . --ext .ts",
    "predev": "npm run lint && npm run test",
    "dev": "NODE_ENV=development nodemon --watch src --ext ts --exec ts-node src/server",
    "ci/cd": "act --container-architecture linux/amd64 --secret-file .secrets"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "http-status": "^1.7.4",
    "mysql2": "^3.10.0",
    "typeorm": "^0.3.20",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.12",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.5.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.2",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
